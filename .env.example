# Neo4j Configuration
NEO4J_AUTH=neo4j/changeme
NEO4J_HOST=neo4j
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_DATA_PATH=/var/lib/neo4j/data

# Backup Configuration
BACKUP_STORAGE_PATH=/backups
BACKUP_SCHEDULE="0 2 * * *"  # Cron: Daily at 2 AM UTC
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKLY_COUNT=4
BACKUP_RETENTION_MONTHLY_COUNT=1
BACKUP_COMPRESSION=gzip
BACKUP_ALERT_EMAIL=ops@example.com

# Recovery Configuration
TEST_NEO4J_CONTAINER=test-neo4j
PROMOTE_AFTER_VALIDATION=false

# Application Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Graphiti MCP Server Configuration
OPENAI_API_KEY=your_openai_api_key_here
GRAPHITI_MODEL_NAME=gpt-4o-mini
GRAPHITI_NEO4J_URI=bolt://neo4j:7687
GRAPHITI_NEO4J_USER=neo4j
GRAPHITI_NEO4J_PASSWORD=changeme
GRAPHITI_TELEMETRY_ENABLED=false
