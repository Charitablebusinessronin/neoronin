{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PredictionOutputSchema",
  "description": "Standardized output format for all BMAD predictions",
  "type": "object",
  "required": ["run_id", "model_name", "timestamp", "predictions", "metadata"],
  "properties": {
    "run_id": {
      "type": "string",
      "pattern": "^pred_[0-9]{8}_[0-9]{4}$",
      "description": "Unique prediction run identifier (e.g., pred_20260126_0215)"
    },
    "model_name": {
      "type": "string",
      "description": "Model that generated predictions"
    },
    "model_version": {
      "type": "string",
      "description": "Model version (e.g., 'v1.2.3')"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Prediction generation timestamp"
    },
    "predictions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entity_id", "prediction_value", "confidence"],
        "properties": {
          "entity_id": {
            "type": "string",
            "description": "Identifier for predicted entity (pattern_id, agent_name, etc.)"
          },
          "entity_type": {
            "type": "string",
            "enum": ["Pattern", "AIAgent", "Insight", "System"],
            "description": "Type of entity being predicted"
          },
          "prediction_value": {
            "oneOf": [
              {"type": "number"},
              {"type": "string"},
              {"type": "boolean"},
              {"type": "object"}
            ],
            "description": "Main prediction output"
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Prediction confidence score"
          },
          "confidence_interval": {
            "type": "object",
            "properties": {
              "lower": {"type": "number"},
              "upper": {"type": "number"},
              "confidence_level": {"type": "number", "default": 0.95}
            }
          },
          "explanation": {
            "type": "object",
            "description": "SHAP or LIME feature importance explanation",
            "properties": {
              "top_features": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "feature_name": {"type": "string"},
                    "importance": {"type": "number"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["prediction_count", "processing_time_ms"],
      "properties": {
        "prediction_count": {
          "type": "integer",
          "description": "Number of predictions in this run"
        },
        "processing_time_ms": {
          "type": "integer",
          "description": "Total prediction generation time (milliseconds)"
        },
        "feature_extraction_time_ms": {
          "type": "integer"
        },
        "model_inference_time_ms": {
          "type": "integer"
        },
        "accuracy_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Model accuracy on validation set (if available)"
        },
        "sample_size": {
          "type": "integer",
          "description": "Number of training samples used"
        }
      }
    },
    "validation": {
      "type": "object",
      "description": "Optional validation results if ground truth available",
      "properties": {
        "actual_vs_predicted": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "entity_id": {"type": "string"},
              "predicted": {"type": "number"},
              "actual": {"type": "number"},
              "error": {"type": "number"}
            }
          }
        },
        "mae": {"type": "number", "description": "Mean Absolute Error"},
        "rmse": {"type": "number", "description": "Root Mean Squared Error"},
        "r_squared": {"type": "number", "description": "RÂ² coefficient"}
      }
    }
  },
  "examples": [
    {
      "run_id": "pred_20260126_0215",
      "model_name": "pattern_effectiveness",
      "model_version": "v1.2.0",
      "timestamp": "2026-01-26T02:15:32Z",
      "predictions": [
        {
          "entity_id": "pattern_auth_429",
          "entity_type": "Pattern",
          "prediction_value": 0.87,
          "confidence": 0.92,
          "confidence_interval": {
            "lower": 0.81,
            "upper": 0.93,
            "confidence_level": 0.95
          },
          "explanation": {
            "top_features": [
              {"feature_name": "success_rate_30d", "importance": 0.42},
              {"feature_name": "agent_diversity", "importance": 0.28},
              {"feature_name": "usage_count_30d", "importance": 0.19}
            ]
          }
        }
      ],
      "metadata": {
        "prediction_count": 1,
        "processing_time_ms": 145,
        "feature_extraction_time_ms": 82,
        "model_inference_time_ms": 63,
        "accuracy_score": 0.89,
        "sample_size": 342
      }
    }
  ]
}
